function userInput() {
    let resultElement = document.getElementById("totalPrice")
    let inputQuantity = document.getElementById("quantity")
    let inputItem = document.getElementById("item")
}

function calculatePrice(numberOfItems) {
    let input = inputQuantity.value
    let itemCount = parseInt(input)

    if (itemCount > 0) {
        let totalPrice = 42
        resultElement.value = "Total price is " + totalPrice
    } else {
        resultElement.value = "invalid input"
     }

    return totalPrice
}
